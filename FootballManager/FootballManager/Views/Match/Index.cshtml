<h2>Maç Listesi</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Ev Sahibi Takım</th>
                                <th>Away Team</th>
                                <th>Deplasman Takımı</th>
                                <th>Hareketler</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var match in Model)
                            {
                                <tr>
                                    <td>@match.Id</td>
                                    <td>@match.Team.Name</td>
                                    <td>@match.AwayID</td>
                                    <td>@match.MatchDate.ToShortDateString()</td>
                                    <td>
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@match.Id">Details</a>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@match.Id">Edit</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@match.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<a class="btn btn-success" asp-action="Create">Create New Match</a>
