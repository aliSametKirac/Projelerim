@model Match

<h2>Create Match</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HomeTeamID" class="control-label">Home Team:</label>
        <select asp-for="HomeTeamID" class="form-control" asp-items="@(new SelectList(ViewData["Teams"] as SelectList, "Value", "Text"))"></select>
        <span asp-validation-for="HomeTeamID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwayID" class="control-label">Away Team:</label>
        <input asp-for="AwayID" class="form-control" />
        <span asp-validation-for="AwayID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MatchDate" class="control-label">Match Date:</label>
        <input asp-for="MatchDate" class="form-control" />
        <span asp-validation-for="MatchDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>