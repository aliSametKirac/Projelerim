@model CaseModels.ViewModels.BookVM
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Upsert">
    <input asp-for="Book.Id" type="hidden" />
    <div class="form-group">
        <label>Kitap İsmi</label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Kitap Açıklaması</label>
        <input asp-for="Book.Description" class="form-control" />
        <span asp-validation-for="Book.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input asp-for="Book.Price" class="form-control" />
        <span asp-validation-for="Book.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Yazar Listesi</label>
        <select asp-for="Book.AuthorId" asp-items="@Model.AuthorList" class="form-select">
            <option disabled selected>-- Yazar Seçin --</option>
        </select>
        <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Yeni Kitap Ekle</button>
    <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">
        Geri Dön
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}