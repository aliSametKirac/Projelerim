@using CaseModels;
@model Author

<form method="post">
	<div class="p-1 mt-1">
		<div class="row">
			<h2>Yeni Yazar Ekleme Sayfası</h2>
			<br />
		</div>
		<div class="mb-3">
			<label class="control-label">Yazar İsmi</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="control-label">Özgeçmiş</label>
			<input asp-for="About" class="form-control" />
			<span asp-validation-for="About" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Yeni Yazar Ekleme</button>
		<a asp-controller="Author" asp-action="Index" class="btn btn-secondary">
			Geri Dön
		</a>
	</div>
</form>