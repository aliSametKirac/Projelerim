@using CaseModels;
@model Author

<form method="post" asp-action="Edit">
	<div class="p-1 mt-1">
		<div class="row pb-2">
			<h2>Yazar Güncelleme Sayfası</h2>
			<br />
		</div>
		<div class="mb-3">
			<label class="control-label">Yazar İsmi Güncelleme</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label class="control-label">Hakkında Güncelleme</label>
			<input asp-for="About" class="form-control" />
			<span asp-validation-for="About" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-success">Güncelleme</button>
		<a asp-controller="Author" asp-action="Index" class="btn btn-secondary">
			Geri Dön
		</a>
	</div>
</form>
