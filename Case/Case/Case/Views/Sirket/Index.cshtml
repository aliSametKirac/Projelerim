@using CaseModels;
@model IEnumerable<Sirket>
@{
    ViewData["Title"] = "Index";
}

<div class="p-1 mt-1 row">
    <div class="text-center">
        <h2>Şirket Sayfası</h2>
    </div>
    <div class="col-12 mx-auto">
        <table class="table table-center">
            <thead>
                <tr class="text-center">
                    <th style="width: 20%">Şirket İsmi</th>
                    <th style="width: 20%">Şirket Vergi No</th>
                    <th style="width: 20%">Şirket Telefonu</th>
                    <th style="width: 20%">Şirket Adresi</th>
                    <th style="width: 20%">OperasyonLar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.SirketAdi</td>
                        <td>@item.SirketVergiNo</td>
                        <td>@item.SirketTelefonu</td>
                        <td>@item.SirketAdresi</td>
                        <td>
                            <a style="width: 48%" href="/Sirket/Delete/@item.Id" class="btn btn-outline-danger">Sil</a>
                            <a style="width: 48%" href="/Sirket/Edit/@item.Id" class="btn btn-outline-success">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Sirket/Create/" class="btn btn-outline-primary">Yeni Şirket Ekleme</a>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}