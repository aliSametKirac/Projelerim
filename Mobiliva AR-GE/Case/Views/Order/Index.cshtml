@using CaseModels.Concrete;
@model IEnumerable<Order>
@{
    ViewData["Title"] = "Index";
}

<div class="p-1 mt-1 row">
    <div class="text-center">
        <h2>Order Page</h2>
    </div>
    <div class="col-12 mx-auto">
        <table class="table table-center">
            <thead>
                <tr class="text-center">
                    <th style="width: 20%">Customer Name</th>
                    <th style="width: 20%">Customer Email</th>
                    <th style="width: 20%">Customer GSM</th>
                    <th style="width: 20%">Total Amount</th>
                    <th style="width: 20%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.CustomerName</td>
                        <td>@item.CustomerEmail</td>
                        <td>@item.CustomerGSM</td>
                        <td>@item.TotalAmount TL</td>
                        <td>
                            <a style="width: 48%" href="/Order/Delete/@item.Id" class="btn btn-outline-danger">Delete</a>
                            <a style="width: 48%" href="/Order/Edit/@item.Id" class="btn btn-outline-success">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Order/Create/" class="btn btn-outline-primary">Adding New Order</a>
    </div>
</div>