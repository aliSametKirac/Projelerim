@using CaseModels.Concrete;
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="p-1 mt-1 row">
    <div class="text-center">
        <h2>Product Page</h2>
    </div>
    <div class="col-12 mx-auto">
        <table class="table table-center">
            <thead>
                <tr class="text-center">
                    <th style="width: 15%">Description</th>
                    <th style="width: 15%">Category</th>
                    <th style="width: 6%">Unit</th>
                    <th style="width: 7%">Unit Price</th>
                    <th style="width: 10%">Total Amount</th>
                    <th style="width: 6%">Status</th>
                    <th style="width: 10%">Create Date</th>
                    <th style="width: 10%">Update Date</th>
                    <th style="width: 20%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Description</td>
                        <td>@item.Category</td>
                        <td>@item.Unit</td>
                        <td>@item.UnitPrice TL</td>
                        <td>@item.TotalAmount TL</td>
                        <td>@item.Status</td>
                        <td>@String.Format("{0:MM/dd/yyyy}", item.CreateDate)</td>
                        <td>@String.Format("{0:MM/dd/yyyy}", item.UpdateDate)</td>
                        <td>
                            <a style="width: 48%" href="/Product/Delete/@item.Id" class="btn btn-outline-danger">Delete</a>
                            <a style="width: 48%" href="/Product/Edit/@item.Id" class="btn btn-outline-success">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Product/Create/" class="btn btn-outline-primary">Adding New Product</a>
    </div>
</div>